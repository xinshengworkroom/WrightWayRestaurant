<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wright Way Restaurant</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
                @Html.ActionLink("Wright Way Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">                
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        @Html.ActionLink("Order", "Index", "Order", null, new Dictionary<string, object> { { "class", "dropdown-toggle" }, { "data-toggle", "dropdown" } })
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Book A Seat", "BookSeat", "Order")</li>
                            <li>@Html.ActionLink("Order Food", "OrderFood", "Order")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        @Html.ActionLink("Information About us", "About", "Information", null, new Dictionary<string, object> { { "class", "dropdown-toggle" }, { "data-toggle", "dropdown" } })
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("location", "Location", "Information")</li>
                            <li>@Html.ActionLink("contact", "Contact", "Information")</li>
                            <li>@Html.ActionLink("our team", "OurTeam", "Information")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
