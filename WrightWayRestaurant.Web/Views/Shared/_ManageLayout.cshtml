<!doctype html>
<html lang="ch">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <title>Manage</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/common.css")
    @Styles.Render("~/Content/css/slide.css")
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/flat-ui.min.css")
    @Styles.Render("~/Content/css/jquery.nouislider.css")
    @RenderSection("styles", required: false)


</head>

<body>
    <div id="wrap">
        <div class="leftMeun" id="leftMeun">
            @Html.Partial("_ManageLeftMenu")
        </div>
        <div id="rightContent">
            <a class="toggle-btn" id="nimei">
                <i class="glyphicon glyphicon-align-justify"></i>
            </a>
            <!-- Tab panes -->
            <div class="tab-content">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/layer")
    @Scripts.Render("~/Scripts/jquery.nouislider.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @*@Scripts.Render("~/Scripts/ajaxfileupload.js")*@
    @Scripts.Render("~/Scripts/fileUpload.js")
    @Scripts.Render("~/Scripts/template.js")
    @Scripts.Render("~/Scripts/common.js")
    <script type="text/javascript">
            $(function () {
                $(".meun-item").click(function () {
                    $(".meun-item").removeClass("meun-item-active");
                    $(this).addClass("meun-item-active");
                    var itmeObj = $(".meun-item").find("img");
                    itmeObj.each(function () {
                        var items = $(this).attr("src");
                        items = items.replace("_grey.png", ".png");
                        items = items.replace(".png", "_grey.png")
                        $(this).attr("src", items);
                    });
                    var attrObj = $(this).find("img").attr("src");
                    ;
                    attrObj = attrObj.replace("_grey.png", ".png");
                    $(this).find("img").attr("src", attrObj);
                    window.location = $(this).attr("href");
                });

                $(".meun-item").each(function () {
                    if (window.location.toString().indexOf($(this).attr("href")) > -1) {
                        $(".meun-item").removeClass("meun-item-active");
                        $(this).addClass("meun-item-active");
                        return;
                    }
                });
            });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
